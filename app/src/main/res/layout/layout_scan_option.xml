<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_scan_option"
        android:paddingVertical="@dimen/_12sdp"
        android:orientation="horizontal"
        android:weightSum="4">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ivImageOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_3sdp"
            android:background="@null"
            android:layout_weight="1"
            android:src="@drawable/image_device" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/barCodeOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:padding="@dimen/_3sdp"
            android:src="@drawable/barcode_option" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_weight="1"
            android:padding="@dimen/_3sdp"
            android:id="@+id/ivbMultipleScan"
            android:src="@drawable/multiple_scan" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ivFlashOption"
            android:layout_width="wrap_content"
            android:background="@null"
            android:padding="@dimen/_3sdp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/flash_off1" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>